  
proc add-group-node {nid} {
  global node group_nodes

  # Report error if repeated add
  if [member $nid $group_nodes] {
    puts "add-group-node: error: $nid already defined"
  }
  
  # add the node
  lappend group_nodes $nid 
  set node($nid,parent) {}
  set node($nid,relname) {}
  set node($nid,span) {}
  set node($nid,constit) {}
  set node($nid,ypos) {}
  set node($nid,textwgt) {}
  set node($nid,text) {}
  set node($nid,labelwgt) {}
  set node($nid,arrowwgt) {}
  set node($nid,spanwgt) {}
  set node($nid,children) {}
  set node($nid,constituents) {}
  set node($nid,visible) 1
  set node($nid,type) {}
  set node($nid,xpos) {}
  set node($nid,ypos) {}
  set node($nid,oldindex) {}
  set node($nid,newindex) {}
  set node($nid,promotion) {}
}
